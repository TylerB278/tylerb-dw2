---
import Theme from "./Theme.astro"
const {title, href} = Astro.props;
---

<a class="button-d" href={href} target="blank">{title}</a>

<style>
    .button-d{
        border: 3px solid #23b6ff;
        color: #23b6ff;
        text-decoration: none;

        padding: 20px;
        border-radius: 20px;
        position: relative;
        /* top: 2rem; */
        left: 1rem;
    }
    .button-d:hover{
        background-color: #23b6ff;
        color: white;
    }

</style>