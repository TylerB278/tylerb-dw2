---
import Theme from "./Theme.astro"
const {title, href} = Astro.props;
---

<a class="button-d" href={href} target="blank">{title}</a>

<style>
    .button-d{
        border: 2px solid #23b6ff;
        color: #23b6ff;
        text-decoration: none;
        font-size: 16px;

        padding: 10px;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        margin-left: 30%;
        margin-right: 30%;
        top: 1rem;
        margin-bottom: 2rem;
        max-width: 300px;
        min-width: 200px;
        /* left: 1rem; */
    }
    .button-d:hover{
        background-color: #23b6ff;
        color: white;
    }

</style>