---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import imgBike from "@assets/assignment-01/bike.jpg";
import imgHero from "@assets/assignment-01/hero-image.jpg";
import imgHike from "@assets/assignment-01/hike.jpg";
import imgPaddle from "@assets/assignment-01/paddle.jpg";

// This next line is used to set the page title on the site navigation and in the browser tab.
export const pageTitle = "Assignment 01 Responsive Version";
---

<Layout compact title={pageTitle}>
  <div class="page-container">
    <!-- <header>
      <nav>
        <a href="/"><h2 class="nav-branding">ExploreHV</h2></a>
        <div class="nav-items">
          <a href="#hike" class="nav-btn">Hike</a>
          <a href="#paddle" class="nav-btn">Paddle</a>
          <a href="#bike" class="nav-btn">Bike</a>
        </div>
      </nav>
    </header> -->
    <section class="section-hero">
      <div class="hero-text-block">
        <h1>Adventure is in your backyard!</h1>
        <p>
          From rugged cliffs and hidden lakes to winding trails and quiet
          rivers, the Hudson Valley is a playground for explorers of every kind.
          Choose your path and dive into the landscapes that make this region
          unforgettable.
        </p>
      </div>
      <Image
        src={imgHero}
        alt="View of the Catskill Mountains near Tannersville"
        class="hero-image"
      />
    </section>
      <section class="section-activity" id="hike">
        <div class="section-text-panel">
          <h2>Hike</h2>
          <p>
            Lace up your boots and wander through forests, ridgelines, and river
            views. Whether you're after a casual stroll or a challenging summit,
            the Hudson Valley has a trail for you.
          </p>
          <a href="" class="btn-cta">Explore Hikes</a>
        </div>
        <Image
          src={imgHike}
          alt="Person sitting on the edge of a cliff at Joppenburg Mountain in Rosendale"
          class="section-image"
        />
      </section>
      <section class="section-activity section-reverse" id="paddle">
        <div class="section-text-panel">
          <h2>Paddle</h2>
          <p>
            Kayak, canoe, or SUP your way through calm lakes and the mighty
            Hudson River. Drift through quiet waters or chase a sunrise paddle
            surrounded by breathtaking scenery.
          </p>
          <a href="" class="btn-cta">Explore Paddling</a>
        </div>
        <Image
          src={imgPaddle}
          alt="Person paddling in the Sawkill River near Kingston"
          class="section-image"
        />
      </section>
      <section class="section-activity" id="bike">
        <div class="section-text-panel">
          <h2>Bike</h2>
          <p>
            Ride through rolling farmland, historic towns, and winding carriage
            roads. From gravel adventures to paved scenic byways, cycling here
            is all about freedom and discovery.
          </p>
          <a href="" class="btn-cta">Explore Cycling</a>
        </div>
        <Image
          src={imgBike}
          alt="Bike on the side of a carriage road at Mohonk Preserve"
          class="section-image"
        />
      </section>
      <section class="explore">
        <p class="big-text">
          Ready to plan your adventure? <br />
          Start exploring and find your perfect Hudson Valley experience.
        </p>
      </section>
      <nav class="places-grid">
        <a class="places-tile"
          ><p class="places-name">Mohonk Preserve</p>
          <p class="places-location">New Paltz</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Minnewaska State Park Preserve</p>
          <p class="places-location">Kerhonkson</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Breakneck Ridge</p>
          <p class="places-location">Cold Spring</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Storm King Mountain</p>
          <p class="places-location">Cornwall-on-Hudson</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Overlook Mountain</p>
          <p class="places-location">Woodstock</p></a
        >

        <a class="places-tile"
          ><p class="places-name">Hudson River Estuary</p>
          <p class="places-location">Various access points</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Esopus Creek</p>
          <p class="places-location">Saugerties</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Moodna Creek</p>
          <p class="places-location">Cornwall</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Rondout Creek</p>
          <p class="places-location">Kingston</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Black Creek Preserve</p>
          <p class="places-location">Esopus</p></a
        >

        <a class="places-tile"
          ><p class="places-name">Wallkill Valley Rail Trail</p>
          <p class="places-location">Gardiner to Kingston</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Ashokan Rail Trail</p>
          <p class="places-location">Olivebridge</p></a
        >
        <a class="places-tile"
          ><p class="places-name">
            Hudson Valley Rail Trail â†’ Walkway Over the Hudson
          </p>
          <p class="places-location">Highland to Poughkeepsie</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Albany-Hudson Electric Trail</p>
          <p class="places-location">Columbia County</p></a
        >
        <a class="places-tile"
          ><p class="places-name">Shawangunk Carriage Roads</p>
          <p class="places-location">New Paltz / Minnewaska</p></a
        >
      </nav>
      <footer></footer>
    </section>
  </div>
</Layout>

<style>
  /* importing fonts */
  @import url("https://fonts.googleapis.com/css2?family=Bree+Serif&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");

  .page-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    /* min-width:1000px; */
  }
  
  header{
    align-self: stretch;
  }

  nav{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-top: 20px;
    padding-right: 100px;
    padding-left: 100px;
  }

  .nav-items{
    display: flex;
    justify-content: space-between;
    gap: 50px;

  }

  .nav-btn{
    background-color: white;
    color: #220d5c;
    width: 140px;
    height: 90px;
    border-radius: 20px;
    padding-top: 30px;
    padding-bottom: 30px;
    color: black;
    text-decoration: none;
    font-size: 25px;
    font-weight: bold;
    text-align: center;
    
  }

  .nav-btn:hover{
    background-color: #220d5c;
    color: white;
  }

  .section-hero{
    /* width: 100%;
    height: 700px;
    position: relative; */
    display: flex;
    flex-direction: column;
    margin-top: 70px;
    /* justify-content: center;
    align-items: center; */
  }

  .hero-image{
    /* position: absolute;
    top: 0px;
    padding-top: 50px;
    height: 100%;
    object-fit: cover; */
    width: 100%;
  }

  .hero-text-block{
    /* position: absolute; */
    z-index: 100;
    width: 800px;
    padding: 50px;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    /* height: 400px; */
    background-color: #0e0035;
    color: white;
  }

  header{

  }

  footer{
    margin-top: 100px;
  }
  
  .section-activity{
    
    padding-left: 0px;
    display: flex;
    justify-content: center;
    /* width: clamp(95%, 1600px, 98%); */
    height: 350px;
    overflow:hidden;
    
  }

  .nav-branding{
    text-decoration: underline;
  }

  .section-text-panel{
      background-color: #220d5c;
      width: 1000px;
      padding-top: 20px;
      padding-right: 70px;
      padding-left: 50px;
      min-width: 500px;
      max-width: 600px;
      flex-shrink: 1;
      
  }

  .section-text-panel p{
    font-size: 16px;
  }

  .section-image{
      width: clamp(200px, 900px, 60%);
      flex-shrink: 1;
      object-fit: cover;
      height: 600px;
  }

  .btn-cta{
    text-decoration: none;
    color: #87bbff;
    border: 4px solid #87bbff;
    border-radius: 10px;
    padding: 20px;
    position: relative;
    top: 50px;
  }

  .btn-cta:hover{
    background-color: #87bbff;
    color: white;
  }

  .section-reverse {
    display: flex;
    flex-direction: row-reverse;
  }

  .explore{
    display: flex;
    justify-content: center;
  }

  .places-grid{
    display: flex;
    flex-flow: row wrap;
    justify-content: space-evenly;
    align-items: space-evenly;
    gap: 20px;
    width: clamp(800px, 1400px, 95%);
  }

  .places-tile{
    background-color: #4f78ff;
    color: white;
    padding: 20px;
    width: 200px;
    height: 150px;
    justify-content: center;
    text-align: center;
    text-decoration: none;
  }

  .places-tile:hover{
    background-color: white;
    color: #4f78ff;
  }

  .places-name{
    font-style: bold;
    font-size: 16px;

  }

  .places-location{
    font-size: 12px
  }

  .big-text{
    margin-top: 70px;
    font-style: italic;
    font-size: 200%;
    text-align: center;

  }

  @media(min-width: 800px){
    .section-hero{
    width: 100%;
    height: 700px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    
    
  }
    .hero-image{
    position: absolute;
    top: 0px;
    padding-top: 50px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
    .hero-text-block{
    position: relative;
    z-index: 100;
    width: 550px;
    padding: 32px;
    height: 400px;
    background-color: #0e0035a1;
    color: white;
  }
  .section-activity{
    
    padding-left: 0px;
    display: flex;
    justify-content: center;
    width: 100%;
    width: clamp(95%, 1600px, 98%);
    height: 500px;
   
  }

    .section-image{
      width: clamp(200px, 900px, 60%);
      flex-shrink: 1;
      object-fit: cover;
      height: 100%;
  }

  .section-text-panel{
      background-color: #220d5c;
      width: 700px;
      padding-top: 50px;
      padding-right: 70px;
      padding-left: 50px;
      min-width: 400px;
      max-width: 600px;
      flex-shrink: 1;
      
  }

  }

</style>
